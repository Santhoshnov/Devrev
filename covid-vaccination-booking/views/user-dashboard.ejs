<h2>Welcome to the User Dashboard</h2>
<h3>Hello, <%= username %>!</h3>

<h2>Search Vaccination Centers</h2>

<form action="/dashboard" method="GET">
  <input type="text" name="search" placeholder="Search" value="<%= search || '' %>">
  <button type="submit">Search</button>
</form>

<h2>Vaccination Centers</h2>

<% if (typeof error !== 'undefined') { %>
  <p><%= error %></p>
<% } else if (centres.length > 0) { %>
  <ul>
    <% centres.forEach(function(centre) { %>
      <li>
        <strong><%= centre.name %></strong><br>
        Working Hours: <%= centre.workingHours %><br>
        <a href="/vaccine-booking?centreId=<%= centre._id %>">Apply for Vaccination Slot</a>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No vaccination centers found.</p>
<% } %>

<h2>Apply for Vaccination Slot</h2>

<form action="/vaccine-booking" method="POST">
  <label for="centreId">Select Vaccination Center:</label>
  <select name="centreId" id="centreId">
    <% centres.forEach(function(centre) { %>
      <option value="<%= centre._id %>"><%= centre.name %></option>
    <% }) %>
  </select>
  <button type="submit">Apply</button>
</form>

<a href="/logout">Logout</a>
